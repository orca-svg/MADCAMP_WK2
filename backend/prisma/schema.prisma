generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider    = "postgresql"
  url         = env("DATABASE_URL")
  extensions  = [vector]
}

model User {
  id                  String    @id @default(uuid()) // Primary Key
  email               String    @unique

  name                String?
  image               String?
  
  nickname            String?
  frequency           Float     @default(0)
  totalLikesReceived  Int       @default(0)
  totalCommentsSent   Int       @default(0)
  createdAt           DateTime  @default(now())

  bookmarks           Bookmark[]
  stories             Story[]
  comments            Comment[]
  sessions            Session[]
  storyLikes          StoryLike[]
  commentLikes        CommentLike[]
}

model Session {
  id            String    @id @default(uuid())
  sessionToken  String    @unique
  userId        String
  expires       DateTime
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())

  @@index([userId])
}

model Advice {
  id        String    @id @default(uuid()) // Primary Key
  content   String    @db.Text
  author    String?

  bookmarks Bookmark[]

  @@index([author])
}

model Bookmark {
  id        String    @id @default(uuid()) // Primary Key
  userId    String
  adviceId  String

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  advice    Advice    @relation(fields: [adviceId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())

  @@unique([userId, adviceId])
  @@index([userId])
  @@index([adviceId])
}

model Story {
  id        String   @id @default(uuid()) // Primary Key
  title     String
  content   String   @db.Text
  isPublic  Boolean  @default(true)
  embedding Unsupported("vector(1536)")?
  likeCount Int       @default(0)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  tags      Tag[]    @relation("StoryToTag")
  likes     StoryLike[]

  createdAt DateTime @default(now())

  comments            Comment[]
  @@index([userId])
  @@index([createdAt])
  @@index([isPublic, createdAt])
}

model Tag {
  id        String    @id @default(uuid())
  name      String    @unique
  stories   Story[]   @relation("StoryToTag")
}

model Comment {
  id        String    @id @default(uuid()) // Primary Key
  content   String    @db.Text
  isBest    Boolean   @default(false)
  likeCount Int       @default(0)
  storyId   String
  userId    String

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  story     Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
  
  likes     CommentLike[]

  createdAt DateTime  @default(now())

  @@index([storyId])
  @@index([userId])
  @@index([createdAt])
  @@index([storyId, createdAt])
}

model StoryLike {
  id          String    @id @default(uuid())
  userId      String
  storyId     String
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  story       Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())

  @@unique([userId, storyId])
  @@index([storyId])
  @@index([userId])
}

model CommentLike {
  id          String    @id @default(uuid())
  userId      String
  commentId   String

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment     Comment   @relation(fields: [commentId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())

  @@unique([userId, commentId])
  @@index([commentId])
  @@index([userId])
}